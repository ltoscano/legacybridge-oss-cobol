# COBOL Migration Agents Configuration Template
# Copy this file to settings.local.env and fill in your actual values

# ==============================================
# AI Service Configuration
# ==============================================

# AI Service Type (AzureOpenAI or OpenAI)
AI_SERVICE_TYPE=AzureOpenAI
AZURE_OPENAI_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=api-version
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4.1
AZURE_OPENAI_MODEL_ID=gpt-4.1 # typically matches AZURE_OPENAI_DEPLOYMENT_NAME

# Alternative: OpenAI Configuration
# AI_SERVICE_TYPE=OpenAI
# AZURE_OPENAI_API_KEY=your-openai-api-key-here
# AZURE_OPENAI_MODEL_ID=gpt-4.1

# Specialized Models (Optional)
# Use different models for different types of analysis
# AZURE_OPENAI_COBOL_ANALYZER_MODEL=gpt-4.1
# AZURE_OPENAI_JAVA_CONVERTER_MODEL=gpt-4.1
# AZURE_OPENAI_DEPENDENCY_MAPPER_MODEL=gpt-4.1
# AZURE_OPENAI_UNIT_TEST_MODEL=gpt-4.1

# ==============================================
# Instructor Mode
# ==============================================

# For maximum compatibility with Ollama and similar
# INSTRUCTOR_MODE=instructor.Mode.JSON
# INSTRUCTOR_MODE=instructor.Mode.OPENROUTER_STRUCTURED_OUTPUTS
# INSTRUCTOR_MODE=instructor.Mode.TOOLS
# INSTRUCTOR_MODE=instructor.Mode.ANTHROPIC_JSON
# For other modes, refer to the Instructor documentation
# https://github.com/567-labs/instructor/blob/main/instructor/mode.py
# https://python.useinstructor.com/concepts/patching/

# ==============================================
# Application Configuration
# ==============================================

# Application Settings
COBOL_SOURCE_FOLDER=./cobol-source
JAVA_OUTPUT_FOLDER=./java-output
TEST_OUTPUT_FOLDER=./test-output
LOGS_FOLDER=./logs

# Processing Options
MAX_FILES_PER_BATCH=10
ENABLE_PARALLEL_PROCESSING=true
BACKUP_ORIGINAL_FILES=true

# AI Model Parameters
AI_MAX_TOKENS=16000
AI_TEMPERATURE=0.1
AI_TIMEOUT_SECONDS=600

# Memory and Conversation Settings
MEMORY_MAX_MESSAGES=50
ENABLE_CONVERSATION_LOGGING=true
AUTO_SAVE_CONVERSATIONS=true

# ==============================================
# Logging Configuration
# ==============================================

LOGGING_LEVEL=INFO
LOGGING_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_API_CALLS=true