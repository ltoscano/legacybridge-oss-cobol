# Docker Environment Configuration for COBOL Migration Agents
# Copy this file to .env and fill in your actual values

# ==============================================
# AI Service Configuration
# ==============================================

# AI Service Type (AzureOpenAI or OpenAI)
AI_SERVICE_TYPE=AzureOpenAI

# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-01
AZURE_OPENAI_MODEL_ID=gpt-4

# Alternative: OpenAI Configuration
# AI_SERVICE_TYPE=OpenAI
# AZURE_OPENAI_API_KEY=your-openai-api-key-here
# AZURE_OPENAI_MODEL_ID=gpt-4

# Specialized Models (Optional)
# AZURE_OPENAI_COBOL_ANALYZER_MODEL=gpt-4
# AZURE_OPENAI_JAVA_CONVERTER_MODEL=gpt-4
# AZURE_OPENAI_DEPENDENCY_MAPPER_MODEL=gpt-4

# ==============================================
# Application Configuration
# ==============================================

# Processing Options
MAX_FILES_PER_BATCH=10
ENABLE_PARALLEL_PROCESSING=true
BACKUP_ORIGINAL_FILES=true

# AI Model Parameters
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1
AI_TIMEOUT_SECONDS=600

# Memory and Conversation Settings
MEMORY_MAX_MESSAGES=50
ENABLE_CONVERSATION_LOGGING=true
AUTO_SAVE_CONVERSATIONS=true

# ==============================================
# Logging Configuration
# ==============================================

LOGGING_LEVEL=INFO
ENABLE_FILE_LOGGING=true
ENABLE_CONSOLE_LOGGING=true
LOG_API_CALLS=true

# ==============================================
# Docker-specific Configuration
# ==============================================

# Container timezone
TZ=UTC

# Development mode (true/false)
DEVELOPMENT_MODE=false